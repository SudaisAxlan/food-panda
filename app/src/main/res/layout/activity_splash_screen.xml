<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#851818"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.SplashScreen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zomato"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginVertical="70sp"
        android:textSize="30sp"

        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:background="@color/white"
        app:lottie_rawRes="@raw/zonmato"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enjoy Zomato "
        android:textSize="26sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginVertical="20sp"
        />
    <TextView
        android:layout_width="300sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Discover the best food and drinks around you!"
        android:textColor="@color/white"
        android:textStyle="italic"

        android:textAlignment="center"
        android:textSize="19sp"
        android:layout_marginTop="20sp" />

</LinearLayout>