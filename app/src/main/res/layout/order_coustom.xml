<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"

        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Deatild Item"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/realatedLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Login"
                android:padding="6dp"
                android:background="@drawable/border"
                android:layout_marginRight="4dp"
                android:textColor="@color/red"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/reaatedSinUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="6dp"
                android:text="SingUp"
                android:textColor="@color/black"
                android:textSize="17sp"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/orderScreenImage"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/ball"
        android:scaleType="fitXY"
        />
    <RatingBar
        android:id="@+id/appRateBar"
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:layout_margin="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/orderScreenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ball"
            android:textSize="25sp"
            android:layout_margin="10sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/minusIcon"
            android:layout_width="50sp"
            android:layout_height="30sp"
            android:src="@drawable/minus"
            android:layout_margin="10sp"
            />
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:text="200"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:gravity="center"
            />
 <ImageView
     android:id="@+id/plusIcon"
            android:layout_width="50sp"
            android:layout_height="30sp"
            android:src="@drawable/pluss"
     android:layout_margin="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addoCartBtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5sp"
            android:text="Add To Cart"
            android:textSize="19sp"
            android:textStyle="italic"
            android:background="@drawable/image_rad"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/orderNowtBtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="5sp"
            android:text="Order Now"
            android:background="@drawable/image_rad"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>